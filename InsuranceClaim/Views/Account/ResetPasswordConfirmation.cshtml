@{
    ViewBag.Title = "Reset password confirmation";
    Layout = "~/Views/Shared/_InsuranceMain.cshtml";
}

<div class="reset-section">
    <div class="container">

        <div class="reset-heading">
            <hgroup class="title">
                <h1>@ViewBag.Title.</h1>
            </hgroup>
            <p>
                Your password has been reset sucessfully. Please @Html.ActionLink("click here to log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })
            </p>
        </div>
    </div>
</div>