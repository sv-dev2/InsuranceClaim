@model  InsuranceClaim.Models.CurrencyModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_InsuranceMain.cshtml";
}




<div class="body-content-section">
    <div class="form-section-top">
        <div class="container">
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 form-section-col">
                    <div class="form-group-section">
                        <div class="form-title">
                            <h2> Add</h2>
                        </div>

                        <div class="form-group-input">
                            @*@using (Ajax.BeginForm("SaveCustomerData", "CustomerRegistration", new AjaxOptions { UpdateTargetId = "CustomerResult", OnSuccess = "GoToProductDetail" }))*@
                            @using (Html.BeginForm("Create", "Currency", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                            {
                           
                                if (TempData["errorMsg"] != null)
                                {
                                    <div class="alert alert-danger ">
                                        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                                        <strong>@TempData["errorMsg"]</strong> .
                                    </div>
                                }



                                <div class="row">
                                    <div class="col-sm-6 col-md-6 form-group-text">
                                        <div class="form-group">
                                            @Html.LabelFor(x => x.CurrencyName, new { @class = "gender-label" })
                                            @Html.TextBoxFor(x => x.CurrencyName, new { @class = "form-control", @name = "MakeDescription", @autocomplete = "off", @id = "Currency", @placeholder = "Currency" })
                                            @Html.ValidationMessageFor(x => x.CurrencyName, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>


                                <div class="row">
                                    <div class="col-sm-6 col-md-6 form-group-text">
                                        <div class="form-group">
                                            @Html.LabelFor(x => x.Description, new { @class = "gender-label" })
                                            @Html.TextBoxFor(x => x.Description, new { @class = "form-control", @name = "Description", @autocomplete = "off", @id = "Description", @placeholder = "Description" })
                                          
                                        </div>
                                    </div>
                                </div>

                         
                                <div class="col-md-12 next-btn">
                                    <div class="row">
                                        <div class="col-sm-6 col-md-6">
                                            <div class="text-left">
                                                <button type="button" class="btn" onclick="window.location.href='@Url.Action("Index","Currency")'">Cancel</button>

                                            </div>
                                        </div>
                                        <div class="col-sm-6 col-md-6">
                                            <div class="text-right">
                                                <button type="submit" class="btn">Add</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>



                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>




</div>



