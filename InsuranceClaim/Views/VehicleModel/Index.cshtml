@model InsuranceClaim.Models.ClsVehicleModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_InsuranceMain.cshtml";
}





<div class="body-content-section">
    <div class="form-section-top">
        <div class="container">
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 form-section-col">
                    <div class="form-group-section">
                        <div class="form-title">
                            <h4>Add Vehicle Model</h4>
                        </div>
                        <div class="form-group-input">
                            @*@using (Ajax.BeginForm("SaveCustomerData", "CustomerRegistration", new AjaxOptions { UpdateTargetId = "CustomerResult", OnSuccess = "GoToProductDetail" }))*@
                            @using (Html.BeginForm("SaveVehicleModel", "VehicleModel", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                            {
                                @Html.HiddenFor(x => x.Id)

                                




                                <div class="row">
                                    <div class="col-sm-6 col-md-6 form-group-select">
                                        <div class="form-group">
                                            <label class="Make"> Make </label>
                                            @Html.DropDownListFor(x => x.MakeCode, new SelectList(ViewBag.MakeList, "MakeCode", "MakeDescription"), "Select Make Description", new { @class = "form-control" })
                                            @Html.ValidationMessageFor(x => x.MakeCode, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>




                                <div class="row">
                                    <div class="col-sm-6 col-md-6 form-group-text">
                                        <div class="form-group">
                                            @Html.LabelFor(x => x.ModelDescription, new { @class = "gender-label" })
                                            @Html.TextBoxFor(x => x.ModelDescription, new { @class = "form-control", @name = "MakeDescription", @autocomplete = "off", @id = "MakeDescription", @placeholder = "Enter Model Description" })
                                            @Html.ValidationMessageFor(x => x.ModelDescription, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="col-sm-6 col-md-6 form-group-text">
                                        <div class="form-group">
                                            @Html.LabelFor(x => x.ModelCode, new { @class = "gender-label" })
                                            @Html.TextBoxFor(x => x.ModelCode, new { @class = "form-control", @name = "ModelCode", @autocomplete = "off", @id = "MakeCode", @placeholder = "Enter Model Code" })
                                            @Html.ValidationMessageFor(x => x.ModelCode, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-6 col-md-6 form-group-text">
                                        <div class="form-group">
                                            @Html.LabelFor(x => x.ShortDescription, new { @class = "gender-label" })
                                            @Html.TextBoxFor(x => x.ShortDescription, new { @class = "form-control", @name = "ShortDescription", @autocomplete = "off", @id = "ShortDescription", @placeholder = "Enter Short Description" })
                                            @Html.ValidationMessageFor(x => x.ShortDescription, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                </div>

                                <div class="col-md-12 next-btn">
                                    <div class="row">
                                        <div class="col-sm-6 col-md-6">
                                            <div class="text-left">
                                                <button type="button" class="btn" onclick="window.location.href='@Url.Action("VehicleModelList","VehicleModel")'">Cancel</button>

                                            </div>
                                        </div>
                                        <div class="col-sm-6 col-md-6">
                                            <div class="text-right">
                                                <button type="submit" class="btn">Add</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>




</div>

