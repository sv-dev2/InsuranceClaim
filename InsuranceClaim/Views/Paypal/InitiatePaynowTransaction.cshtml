@model Insurance.Domain.PaymentInformation
@{
    ViewBag.Title = "Payment Confirmation";
    Layout = "~/Views/Shared/_InsuranceMain.cshtml";
}

<div class="top-banner-section">
    <div class="container">
    </div>
</div>

<style>
    .display-3 {
        font-size: 4.5rem;
        font-weight: 300;
        text-align: center;
    }

    .lead {
        font-size: 1.25rem;
        font-weight: 300;
        text-align: center;
    }

    p {
        margin-top: 0;
        margin-bottom: 1rem;
        text-align: center;
    }
</style>

<div class="body-content-section">


    @if (ViewBag.strScript != null && ViewBag.strScript != "")
    {
        @Html.Raw(ViewBag.strScript)
    }


    <br />
    <div class="form-section-top">
        <div class="container">
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 form-section-col">
                    <div class="jumbotron text-xs-center">
                        <h1 class="display-3">Processing your Payment !</h1>
                        <br />
                        <p class="lead"><strong id="errormsg">Please do not click back or refresh the page.</strong></p>
                        <p>
                            Having trouble? <a href="">Contact us</a>
                        </p>
                        <p class="lead">
                            <a class="btn btn-primary btn-sm" href="javascript:void(0)" role="button">Continue</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br />

</div>

