@model List<Insurance.Domain.CoverType>
@{
    ViewBag.Title = "CoverList";
    Layout = "~/Views/Shared/_InsuranceMain.cshtml";
}


@using (Html.BeginForm("EditCovertype", "Covertype", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <div class="productsave-section">
        <div class="container">
            <div class="row">
                <div class="col-xs-12 col-sm-8 col-md-8 col-lg-8 products-top">
                    <div class="head-title">
                        <h2>Cover types</h2>
                    </div>
                </div>
                @*<div class="col-xs-12 col-sm-4 col-md-4 col-lg-4 add-btn">
                    <div class="text-right">
                        
                        <form>
                            <input class="btn btn-primary" type="button" value="Add" onclick="window.location.href='@Url.Action("Index", "Covertype" )'" />
                        </form>



                    </div>
                </div>*@
            </div>
            <div class="product-table-grid">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Name</th>

                            <th class="action-th">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Insurance.Domain.CoverType item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>

                                <td>
                                    <div class="tbl-btn-list">
                                        <ul class="list-inline">
                                            <li>@Html.ActionLink("Edit", "EditCovertype", new { id = item.Id }, new { @class = "btn-sm btn-primary" })</li>
                                            <li><button type="button" class="btn-sm btn-danger" onclick="showPopupp('@item.Id')">Delete</button></li>
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>


    <div class="modal fade" id="mymodals" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <p style="text-align: center;color: #00bcea;font-weight: bold;">Are you sure you want to delete this?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" onclick="ConfirmDelete();">Yes</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">No</button>
                </div>
            </div>
        </div>
    </div>


}


<script>
    
    let CoverListId;
    function showPopupp(Id) {
        debugger;
        $("#mymodals").modal("show");
        CoverListId = Id;
    }
    function ConfirmDelete() {
        debugger;
        var url = "@Url.Action("DeleteCovertype", "Covertype", new {Id=1021 })";
        var newurl = url.replace("1021", CoverListId);
        window.location.href = newurl;
    }
</script>



