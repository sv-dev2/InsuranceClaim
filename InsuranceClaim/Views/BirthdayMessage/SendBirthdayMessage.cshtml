@model InsuranceClaim.Models.BirthdayMessageModel
@{
    ViewBag.Title = "SendBirthdayMessage";
    Layout = "~/Views/Shared/_InsuranceMain.cshtml";
}

<div class="body-content-section">
    <div class="form-section-top">
        <div class="container">
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 form-section-col">
                    <div class="form-group-section">
                        <div class="form-title">
                            <h4>Send Birthday Message</h4>
                        </div>
                        <div class="form-group-input">
                            @using (Html.BeginForm("SendBirthdayMessage", "BirthdayMessage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                            {
                                <div class="row">
                                    <div class="col-sm-6 col-md-6 form-group-text">
                                        <div class="form-group">
                                            @Html.LabelFor(x => x.Message, new { @class = "gender-label" })
                                            @*@Html.TextBoxFor(x => x.Message, new { @class = "form-control", @autocomplete = "off", @placeholder = "Enter Message", @Id = "txtBirthdaysMessage" })*@


                                            @Html.TextAreaFor(x => x.Message, new { @class = "form-control", @autocomplete = "off", @placeholder = "Enter Message", @Id = "txtBirthdaysMessage", rows = "5", cols = "20" })

                                            @Html.ValidationMessageFor(x => x.Message, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>

                                <br />
                                <div class="col-md-12 next-btn">
                                    <div class="row">
                                        <div class="col-sm-6 col-md-6">
                                            <div class="text-left">
                                                @*<button type="button" class="btn" onclick="window.location.href='@Url.Action("SendBirthdayMessage", "BirthdayMessage")'">Cancel</button>*@
                                            </div>
                                        </div>
                                        <div class="col-sm-6 col-md-6">
                                            <div class="text-right">
                                                <button type="submit" class="btn">Add</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>