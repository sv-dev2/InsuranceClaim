@model InsuranceClaim.Models.SourceDetailModel
@{
    ViewBag.Title = "AddSourceDetails";
    Layout = "~/Views/Shared/_InsuranceMain.cshtml";
}

@*<h2>AddSourceDetails</h2>*@

<div class="body-content-section">
    <div class="form-section-top">
        <div class="container">
            @*@{
                var menutab = Html.Partial("SourceDetail");
            }
            @menutab*@
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 form-section-col">
                    <div class="form-group-section">
                        <div class="form-title">
                            <h4>Add Source Details</h4>
                        </div>
                        <div class="form-group-input">
                            @using (Html.BeginForm("AddSourceDetails", "SourceDetail", FormMethod.Post, new { @class = "form-horizontal" }))
                            {   
                                <div class="row">

                                    <div class="col-sm-6 col-md-6 form-group-select">
                                        <div class="form-group">
                                            @Html.LabelFor(x => x.Source, new { @class = "gender-label" })
                                            @Html.DropDownListFor(x=>x.Source, new SelectList(ViewBag.BusinessSources,"Id", "Source"), new {@class= "form-control", @id = "ddlSource"})
                                        </div>
                                    </div>

                                    <div class="col-sm-6 col-md-6 form-group-text">
                                        <div class="form-group">
                                            @Html.LabelFor(x => x.FirstName, new { @class = "gender-label" })
                                            @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control", @autocomplete = "off", @placeholder = "Enter First Name", @Id = "FirstName" })
                                            @Html.ValidationMessageFor(x => x.FirstName, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>

                                <div class="row">

                                    <div class="col-sm-6 col-md-6 form-group-text">
                                        <div class="form-group">
                                            @Html.LabelFor(x => x.LastName, new { @class = "gender-label" })
                                            @Html.TextBoxFor(x => x.LastName, new { @class = "form-control", @autocomplete = "off", @placeholder = "Enter Last Name", @Id = "LastName" })
                                            @Html.ValidationMessageFor(x => x.LastName, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="col-sm-6 col-md-6 form-group-text">
                                        <div class="form-group">
                                            @Html.LabelFor(x => x.Email, new { @class = "gender-label" })
                                            @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @autocomplete = "off", @placeholder = "Enter Email", @Id = "Email" })
                                            @Html.ValidationMessageFor(x => x.Email, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-6 col-md-6 form-group-text">
                                        <div class="form-group">
                                            @Html.LabelFor(x => x.PhoneNumber, new { @class = "gender-label" })
                                            @Html.TextBoxFor(x => x.PhoneNumber, new { @class = "form-control", @autocomplete = "off", @placeholder = "Enter Phone Number", @Id = "PhoneNumber",@maxlength="10" })
                                            @Html.ValidationMessageFor(x => x.PhoneNumber, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="col-sm-6 col-md-6 form-group-text">
                                        <div class="form-group">
                                            @Html.LabelFor(x => x.Address, new { @class = "gender-label" })
                                            @Html.TextBoxFor(x => x.Address, new { @class = "form-control", @autocomplete = "off", @placeholder = "Enter Address", @Id = "Address" })
                                            @Html.ValidationMessageFor(x => x.Address, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <br />
                                <div class="col-md-12 next-btn">
                                    <div class="row">
                                        <div class="col-sm-6 col-md-6">
                                            <div class="text-left">
                                                <button type="button" class="btn" onclick="window.location.href='@Url.Action("SourceDetailsList", "SourceDetail")'">Cancel</button>
                                            </div>
                                        </div>
                                        <div class="col-sm-6 col-md-6">
                                            <div class="text-right">
                                                <button type="submit" class="btn">Add</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
