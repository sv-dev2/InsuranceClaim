
@model InsuranceClaim.Models.EcoCashModel

@{
    ViewBag.Title = "EcoCashPayment";
    Layout = "~/Views/Shared/_InsuranceMain.cshtml";
}

<div class="body-content-section">
    <div class="form-section-top">
        <div class="container">
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 form-section-col">
                    <div class="form-group-section">
                        <div class="form-title">
                            <h4>EcoCashPayment</h4>

                        </div>
                        <div class="form-group-input">
                            @*@using (Ajax.BeginForm("SaveCustomerData", "CustomerRegistration", new AjaxOptions { UpdateTargetId = "CustomerResult", OnSuccess = "GoToProductDetail" }))*@
                            @using (Html.BeginForm("EcoCashPayment", "Paypal", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                            {
                                @Html.HiddenFor(m => m.SummaryId)
                                @Html.HiddenFor(m => m.PaymentMethodId)
                                @Html.HiddenFor(m => m.InvoiceNumber)
                                <div class="row">
                                    <div class="col-sm-6 col-md-6 form-group-text">
                                        <div class="form-group">
                                            @Html.LabelFor(x => x.OTP, new { @class = "gender-label" })
                                            @Html.TextBoxFor(x => x.OTP, new { @class = "form-control", @name = "OTP", @autocomplete = "off", @id = "OTP", @placeholder = "Enter OTP" })
                                            @Html.ValidationMessageFor(x => x.OTP, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    
                                </div>
                                <div class="col-md-12 next-btn">
                                    <div class="row">
                                        <div class="col-sm-6 col-md-6">
                                            <div class="text-left">
                                                <button type="button" class="btn" onclick="window.location.href='@Url.Action("index","InsuranceHome")'">Cancel</button>
                                            </div>
                                        </div>
                                        <div class="col-sm-6 col-md-6">
                                            <div class="text-right">
                                                <button type="submit" class="btn">Submit</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>




</div>
