<script>

    $(document).ready(function () {
        if ('@ViewBag.file' != null && '@ViewBag.file' != '') {
            window.open('@ViewBag.file', '_blank');
        }
    });


    function saveAndRedirect() {
        var isCheck = $(this).is(':checked');
        var id = "@Model.SummaryDetailId"
        $.ajax({
            url: "/Paypal/SaveDeleverLicence",
            method: "post",
            data: { IsCheck: isCheck, Id: id },
            success: function (data) {
                if (data == true) {
                    window.location.href = "/InsuranceHome/Index"
                }
            }
        })
    }
</script>
