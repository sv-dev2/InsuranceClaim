@model InsuranceClaim.Models.CovertypeModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_InsuranceMain.cshtml";
}


<style>
    #dot {
        padding: 10%;
    }
</style>
<div class="container" id="dot">
    <div class="product-page-design">
        <h2>Cover Type</h2>
        @using (Html.BeginForm("SaveCover", "Covertype", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            <div class="form-group">
                @Html.Label("Name", new { @class = "col-md-3 control-label" })
                <div class="col-md-5">

                    <div class="form-group-inputs">
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @placeholder=" Name" })
                        @Html.ValidationMessageFor(x => x.Name, "", new { @class = "text-danger" })
                        @*@Html.ValidationMessageFor(x => x.ProductName, "", new { @class = "text-danger" })*@
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-3"></div>
                <div class="col-sm-5"><input type="submit" name="Submit" class="btn btn-primary btn sm" /></div>
            </div>
        }
    </div>
</div>
