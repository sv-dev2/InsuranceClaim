    <div class="container">
        <div class="car-insurance-content">
            <h2>Get Car Insurance In Less<br>Than 5 Minutes<h2>
        </div>
    </div>
</div>*@

<div class="body-content-section">
    <div class="Process-step-section1">
        <div class="container">
            @{
                var menutab = Html.Partial("ClaimRegister");
            }
            @menutab
            <div class="row bs-wizard">
            </div>
        </div>
    </div>

    <div class="form-section-top">
        <div class="container">
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 form-section-col">
                    <div class="form-group-section">
                        <div class="form-title">
                            <h2>Edit Claim Details Provider</h2>

                        </div>

                        <div class="form-group-input">

                            @*@using (Html.BeginForm("RegisterClaim", "Claimant", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))*@

                            @using (Html.BeginForm("EditClaimDetailsProvider", "Claimant", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                            {
                                @Html.HiddenFor(x => x.PolicyNumber);
                                @Html.HiddenFor(x => x.ClaimNumber);
                                @Html.HiddenFor(x => x.Id);

                                <div class="row">
                                    <div class="col-sm-6 col-md-6 form-group-select">
                                        <div class="form-group">
                                            <label>Policy Number</label>:
                                            @Html.LabelFor(x => x.PolicyNumber, Model.PolicyNumber)
                                        </div>
                                    </div>
                                    <div class="col-sm-6 col-md-6 form-group-select">
                                        <div class="form-group">
                                            <label>Claim Number</label> :
                                            <label> @Model.ClaimNumber</label>
                                            @*@Html.LabelFor(x => x.ClaimNumber, Model.ClaimNumber)*@
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-6 col-md-6 form-group-select">
                                        <div class="form-group">
                                            @Html.LabelFor(x => x.AssessorsProviderType, new { @class = "gender-label" })
                                            @Html.DropDownListFor(x => x.AssessorsProviderType, new SelectList(ViewBag.AssessorsType, "Id", "ServiceProviderName"), "Select Provider", new { @class = "form-control" })
                                            @Html.ValidationMessageFor(x => x.AssessorsProviderType, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="col-sm-6 col-md-6 form-group-select">
                                        <div class="form-group">
                                            @Html.LabelFor(x => x.ValuersProviderType, new { @class = "gender-label" })
                                            @Html.DropDownListFor(x => x.ValuersProviderType, new SelectList(ViewBag.ValuersType, "Id", "ServiceProviderName"), "Select Provider", new { @class = "form-control" })
                                            @Html.ValidationMessageFor(x => x.ValuersProviderType, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-6 col-md-6 form-group-select">
                                        <div class="form-group">
                                            @Html.LabelFor(x => x.RepairersProviderType, new { @class = "gender-label" })
                                            @Html.DropDownListFor(x => x.RepairersProviderType, new SelectList(ViewBag.RepairersType, "Id", "ServiceProviderName"), "Select Provider", new { @class = "form-control" })
                                            @Html.ValidationMessageFor(x => x.RepairersProviderType, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="col-sm-6 col-md-6 form-group-select">
                                        <div class="form-group">
                                            @Html.LabelFor(x => x.LawyersProviderType, new { @class = "gender-label" })
                                            @Html.DropDownListFor(x => x.LawyersProviderType, new SelectList(ViewBag.LawyersType, "Id", "ServiceProviderName"), "Select Provider", new { @class = "form-control" })
                                            @Html.ValidationMessageFor(x => x.LawyersProviderType, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>



                                <div class="row">
                                    <div class="col-md-12 next-btn">
                                        <div class="row">
                                            <div class="col-sm-6 col-md-6">
                                                <div class="text-left">
                                                    <button type="button" class="btn" onclick="window.location.href='@Url.Action("ClaimDetailsList","Claimant")'">Cancel</button>
                                                </div>
                                            </div>
                                            <div class="col-sm-6 col-md-6">
                                                <div class="text-right">
                                                    <button type="submit" id="buttonNext" class="btn">Next</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>