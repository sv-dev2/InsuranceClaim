@model InsuranceClaim.Models.ReinsuranceBrokerModel
@{
    ViewBag.Title = "AddReinsuranceBroker";
    Layout = "~/Views/Shared/_InsuranceMain.cshtml";
}

<div class="body-content-section">
    <div class="form-section-top">
        <div class="container">
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 form-section-col">
                    <div class="form-group-section">
                        <div class="form-title">
                            <h4>Add Reinsurance Broker</h4>
                        </div>
                        <div class="form-group-input">
                            @*@using (Ajax.BeginForm("SaveCustomerData", "CustomerRegistration", new AjaxOptions { UpdateTargetId = "CustomerResult", OnSuccess = "GoToProductDetail" }))*@
                            @using (Html.BeginForm("SaveReinsuranceBroker", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                            {
                                @Html.HiddenFor(x => x.Id)

                                <div class="row">
                                    <div class="col-sm-6 col-md-6 form-group-text">
                                        <div class="form-group">
                                            @Html.LabelFor(x => x.ReinsuranceBrokerName, new { @class = "gender-label" })
                                            @Html.TextBoxFor(x => x.ReinsuranceBrokerName, new { @class = "form-control", @name = "ReinsuranceBrokerName", @autocomplete = "off", @id = "ReinsuranceBrokerName", @placeholder = "Reinsurance Broker Name" })
                                            @Html.ValidationMessageFor(x => x.ReinsuranceBrokerName, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="col-sm-6 col-md-6 form-group-text">
                                        <div class="form-group">
                                            @Html.LabelFor(x => x.ReinsuranceBrokerCode, new { @class = "gender-label" })
                                            @Html.TextBoxFor(x => x.ReinsuranceBrokerCode, new { @class = "form-control", @name = "ReinsuranceBrokerCode", @autocomplete = "off", @id = "ReinsuranceBrokerCode", @placeholder = "Reinsurance Broker Code" })
                                            @Html.ValidationMessageFor(x => x.ReinsuranceBrokerCode, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>


                                <div class="row">
                                    <div class="col-sm-6 col-md-6 form-group-text">
                                        <div class="form-group">
                                            @Html.LabelFor(x => x.Commission, new { @class = "gender-label" })
                                            @Html.TextBoxFor(x => x.Commission, new { @class = "form-control", @name = "Commission", @autocomplete = "off", @id = "Commission", @placeholder = "Commission" })
                                            @Html.ValidationMessageFor(x => x.Commission, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                </div>
                                @*<input type="submit"  class="btn btn-primary"name="Save"/>*@
                                <div class="col-md-12 next-btn">
                                    <div class="row">
                                        <div class="col-sm-6 col-md-6">
                                            <div class="text-left">

                                                <button type="button" class="btn" onclick="window.location.href='@Url.Action("ListReinsuranceBroker","Account")'">Cancel</button>

                                            </div>
                                        </div>
                                        <div class="col-sm-6 col-md-6">
                                            <div class="text-right">
                                                <button type="submit" class="btn">Add</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>




</div>
