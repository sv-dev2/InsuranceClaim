
@{
    ViewBag.Title = "UpdateQuery";
    Layout = "~/Views/Shared/_InsuranceMain.cshtml";
}


<input type="text" name="Id" id="summaryid" />
<input type="text" name="Id" id="amonnt" />
<button type="submit" class="btn btn-btn success" onclick="updatedata()">Submit</button>


<div class="productsave-section" style="display:none">
    <div class="container">

        <div class="product-table-grid">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Id</th>
                       
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in ViewBag.data)
                    {
                        <tr>
                            <td>@item.Id</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


<script>
    function updatedata() {
        debugger;
        var value = $("#summaryid").val();
        var getamonut = $("#amonnt").val();
        $.ajax({
            url: "@Url.Action("UpdateSummary", "Account")",
            type: "POST",
            data: { SummartId: value, Amount: getamonut },
            success: function (Result) {
                debugger;
                if (Result == 1) {
                    alert("Update success Full");
                }
                else {
                    alert("Plesae try again");
                }
            }
        })

    }

</script>